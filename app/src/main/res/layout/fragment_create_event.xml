<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvCreateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textStyle="bold"
            android:textSize="26sp"
            android:paddingBottom="8dp"/>

        <!-- Poster row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Poster:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnPickPoster"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Pick Poster"
                android:src="@android:drawable/ic_menu_report_image"/>
        </LinearLayout>

        <!-- Section label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details:"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"/>

        <!-- Event Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name:"/>
        <EditText
            android:id="@+id/etEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Event"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Description:"/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="4"
            android:gravity="top|start"
            android:hint="Event Description"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Waiting List Limit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Waiting List Limit (Optional):"/>
        <EditText
            android:id="@+id/etWaitLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 200"
            android:inputType="number"
            android:padding="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Number of Winners -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Number of Winners:"/>
        <EditText
            android:id="@+id/etWinners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 20"
            android:inputType="number"
            android:padding="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Registration Deadline: Date + Time in one row -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Registration Deadline:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/etRegDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YYYY-MM-DD (e.g., 2025-01-01)"
                android:inputType="date"
                android:padding="10dp"
                android:background="@android:drawable/edit_text" />

            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etRegTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="HH:mm:ss (e.g., 21:10:00)"
                android:inputType="time"
                android:padding="10dp"
                android:background="@android:drawable/edit_text" />
        </LinearLayout>

        <!-- Footer buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

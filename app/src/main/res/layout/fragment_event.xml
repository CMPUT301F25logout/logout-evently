<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btnDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER: Poster + Title + Top-right metadata -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Poster -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgPoster"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_person_24"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                android:contentDescription="poster" />

            <!-- Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Event Title"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <!-- Top-right metadata -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- Event Category -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Placeholder"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="2dp"/>

                <!-- Entrants Count / Capacity -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtEntrants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X / Y entrants"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="2dp"/>

                <!-- Selection Limit -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtSelectionLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X Winners"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- MAIN IMAGE by default is invisible to prevent glitching-->
        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@android:color/darker_gray"
            android:contentDescription="event image"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <!-- METADATA BELOW IMAGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Invisible status for code compatibility -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:visibility="invisible"
                android:clickable="false"
                android:focusable="false"
                android:height="0dp"/>

            <!-- Selection date -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtselection_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selection on DATE"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="2dp"/>

            <!-- Invisible date kept for code compatibility -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:visibility="invisible"
                android:clickable="false"
                android:focusable="false"
                android:height="0dp"/>
        </LinearLayout>

        <!-- Short Description -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event description preview..."
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="0dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organizer_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.evently.ui.organizer.HomeFragment"
        android:label="My Events"
        tools:layout="@layout/fragment_organizer_home">
        <action
            android:id="@+id/action_nav_home_to_event_details"
            app:destination="@id/event_details" />
        <action
            android:id="@+id/action_nav_home_to_create_event"
            app:destination="@id/create_event" />
    </fragment>

    <fragment
        android:id="@+id/event_details"
        android:name="com.example.evently.ui.organizer.EditEventDetailsFragment"
        android:label="Manage Event"
        tools:layout="@layout/fragment_event_details">
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/create_event"
        android:name="com.example.evently.ui.organizer.CreateEventFragment"
        android:label="Create Event"
        tools:layout="@layout/fragment_create_event" />
</navigation>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.evently.ui.entrant.BrowseEventsFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_event_list">
        <action
            android:id="@+id/action_nav_home_to_event_details"
            app:destination="@id/event_details" />
    </fragment>

    <fragment
        android:id="@+id/event_details"
        android:name="com.example.evently.EventDetailsFragment"
        android:label="fragment_event_details"
        tools:layout="@layout/fragment_event_details" >
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>
</navigation>

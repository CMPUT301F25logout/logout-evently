<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.evently.ui.entrant.HomeFragment"
        android:label="Browse Events"
        tools:layout="@layout/fragment_entrant_home">
        <action
            android:id="@+id/action_nav_home_to_event_details"
            app:destination="@id/event_details"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_notifs"
        android:name="com.example.evently.ui.entrant.ViewNotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifs"/>

    <fragment
        android:id="@+id/event_details"
        android:name="com.example.evently.ui.entrant.ViewEventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details">
        <argument
            android:name="eventID"
            app:argType="java.util.UUID" />

    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.evently.ui.entrant.SearchEventsFragment"
        android:label="Search Events"
        tools:layout="@layout/fragment_event_search"/>



</navigation>

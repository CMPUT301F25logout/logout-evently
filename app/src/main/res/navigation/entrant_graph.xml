<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.evently.ui.entrant.BrowseEventsFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_event_list">
        <action
            android:id="@+id/action_nav_home_to_event_details"
            app:destination="@id/event_details" />
        <action
            android:id="@+id/action_browse_to_joined"
            app:destination="@id/nav_joined" />
    </fragment>

    <fragment
        android:id="@+id/event_details"
        android:name="com.example.evently.ui.entrant.ViewEventDetailsFragment"
        android:label="fragment_event_details"
        tools:layout="@layout/fragment_event_details">
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_notifs"
        android:name="com.example.evently.ui.entrant.ViewNotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifs"/>

    <fragment
        android:id="@+id/nav_joined"
        android:name="com.example.evently.ui.entrant.JoinedEventsFragment"
        android:label="Joined"
        tools:layout="@layout/fragment_event_list_tabbed">
        <action
            android:id="@+id/action_joined_to_browse"
            app:destination="@id/nav_home" />
    </fragment>

</navigation>

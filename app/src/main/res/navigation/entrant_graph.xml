<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_graph"
    app:startDestination="@id/nav_browse">

    <fragment
        android:id="@+id/nav_browse"
        android:name="com.example.evently.ui.entrant.BrowseEventsFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_event_entrants_list">
        <action
            android:id="@+id/action_browse_to_joined"
            app:destination="@id/nav_joined" />
    </fragment>

    <fragment
        android:id="@+id/nav_notifs"
        android:name="com.example.evently.ui.entrant.ViewNotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifs"/>

    <fragment
        android:id="@+id/nav_joined"
        android:name="com.example.evently.ui.entrant.JoinedEventsFragment"
        android:label="Joined"
        tools:layout="@layout/fragment_event_entrants_list">
        <action
            android:id="@+id/action_joined_to_browse"
            app:destination="@id/nav_browse" />
    </fragment>

</navigation>
